<%- include('./partials/header.ejs') %>
<style>
@import url(https://fonts.googleapis.com/css?family=Roboto);
@import url(https://fonts.googleapis.com/css?family=Handlee);

/* 
body {
    margin: 40px 0 0;
    background: #91D1D3;
    font-family: 'Roboto', sans-serif;
} */
.note-title {
    width: 100%;
    max-width: 100%;
    height: 100%;
    max-height: 100%;
    line-height: 30px;
    padding: 0 10px;
    border: 0;
    outline: 0;
    background: transparent;
    color: rgb(0, 9, 6);
    font-family: 'Handlee', cursive;
    font-weight: bold;
    font-size: 18px;
    box-sizing: border-box;
    z-index: 1;
}

.paper {
    position: relative;
    width: 90%;
    max-width: 800px;
    min-width: 400px;
    height: 480px;
    margin: 0 auto;
    background: #fafafa;
    border-radius: 10px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, .3);
    overflow: hidden;
}

.paper:before {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    width: 60px;
    background: radial-gradient(#575450 6px, transparent 7px) repeat-y;
    background-size: 30px 30px;
    border-right: 3px solid #D44147;
    box-sizing: border-box;
}

.paper-content {
    position: absolute;
    top: 30px;
    right: 0;
    bottom: 30px;
    left: 60px;
    background: linear-gradient(transparent, transparent 28px, #91D1D3 28px);
    background-size: 30px 30px;
}

.paper-content textarea {
    width: 100%;
    max-width: 100%;
    height: 100%;
    max-height: 100%;
    line-height: 30px;
    padding: 0 10px;
    border: 0;
    outline: 0;
    background: transparent;
    color: mediumblue;
    font-family: 'Handlee', cursive;
    font-weight: bold;
    font-size: 18px;
    box-sizing: border-box;
    z-index: 1;
}

.submit_note {
    border-radius: 50px;
}
</style>
<div class="paper mt-5">
    <div class="paper-content">
        <form action="/update" method="POST">
            <input type="hidden" name="_id" value="<%= updateNote._id %>">
            <input type="text" class="note-title" name="title"
                placeholder="Title..." value="<%= updateNote.title %>"
                required><br>
            <textarea name="content" rows="10" cols="100"
                placeholder="Type Your Content Here..."><%= updateNote.content %></textarea>
            <button type="submit"
                class="btn btn-info px-5 submit_note">Update</button>
        </form>
        <form action="/delete" method="POST">
            <input type="hidden" name="_id" value="<%= updateNote._id %>">
            <button type="submit"
                class="btn btn-info px-5 submit_note mt-2">Delete</button>
        </form>
    </div>
</div>

<%- include('./partials/footer.ejs') %>
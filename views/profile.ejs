<%- include('./partials/header.ejs') %>
<div class="container profile-box mt-5 Larger shadow">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 text-center profile-dp-section rounded">
                <img class="profile-dp" src="./img/Tejasvi Gradient DP.png"
                    width="150px"
                    height="150px" alt>
                <h1 class="mt-3 name">
                    Tejasvi Kumar
                </h1>
            </div>
            <div class="col-lg-8 rounded profile-form-section">
                <div class="card p-4">
                    <form class="profile-form">
                        <input type="text" class="form-control"
                            placeholder="First Name">
                        <input type="text" class="form-control"
                            placeholder="Last Name">
                        <input type="email" class="form-control"
                            placeholder="Email" disabled>
                    </form>
                    <div class="profile-actions">
                        <button type="button" class="btn btn-primary">Edit
                            Profile</button>
                        <button type="button" class="btn btn-danger">Log
                            Out</button>
                    </div>
                    <div class="text-right mt-2">
                        <button type="button"
                            class="btn btn-danger delete-btn"><span
                                class="delete-icon p-1"><i
                                    class="fa-solid fa-trash"></span></i>Delete
                            Account</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('./partials/footer.ejs') %>